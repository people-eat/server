{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@people-eat/server-domain": ["packages/domain/src/index.ts"],
            "@people-eat/server-adapter-logger": ["packages/adapter-logger/src/index.ts"],
            "@people-eat/server-adapter-data-source-typeorm": ["packages/adapter-data-source-typeorm/src/index.ts"],
            "@people-eat/server-adapter-sms-twilio": ["packages/adapter-sms-twilio/src/index.ts"],
            "@people-eat/server-adapter-email-nodemailer": ["packages/adapter-email-nodemailer/src/index.ts"],
            "@people-eat/server-adapter-email-klaviyo": ["packages/adapter-email-klaviyo/src/index.ts"],
            "@people-eat/server-adapter-payment-stripe": ["packages/adapter-payment-stripe/src/index.ts"],
            "@people-eat/server-adapter-email-template": ["packages/adapter-email-template/src/index.ts"],
            "@people-eat/server-app-apollo-server": ["packages/app-apollo-server/src/index.ts"],
            "@people-eat/server-host-integration": ["packages/host-integration/src/index.ts"],
            "@people-eat/server-host-mock": ["packages/host-mock/src/index.ts"],
            "@people-eat/server-host-local": ["packages/host-local/src/index.ts"],
            "@people-eat/server-host-production": ["packages/host-production/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
